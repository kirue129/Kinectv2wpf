<Window x:Class="Kinectv2wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinectv2wpf"
        mc:Ignorable="d"
        Title="MainWindow"
        Loaded="Window_Loaded" 
        Closing="Window_Closing">
    <Grid Width="960" Height="540">
        <Image x:Name="ImageColor" />

        <GroupBox Header="座標系" Width="130" Height="60"
                  HorizontalAlignment="Left" VerticalAlignment="Top"
                  Background="White">
            <StackPanel Orientation="Vertical" Margin="5">
                <RadioButton Content="カラー座像系"
                             x:Name="IsColorCoodinate" IsChecked="True"/>
                <RadioButton Content="Depth座標系"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
